{% extends 'master.twig' %}

{% block content %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Работы
                    <small>все работы</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.twig">Главная</a>
                    </li>
                    <li class="active">Работы</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
            {% for record in records %}
            <div class="col-md-4 img-portfolio">
                <a href="{{ record.link }}">
                    <img class="img-responsive img-hover" src="{{ record.image|thumbnail(700, 450) }}" alt="">
                </a>
                <h3>
                    <a href="portfolio-item.html">{{ record.title }}</a>
                </h3>
                <p>{{ record.description }}</p>
            </div>
            {% endfor %}

        </div>
        <!-- /.row -->



        <hr>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>
{% endblock content %}